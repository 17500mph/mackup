#!/usr/bin/env python

import sys
import os.path

try:
    import mackup.main
except ImportError:
    # If Mackup is not installed globally, we are in a dev environment and
    # the mackup module is at the same path level as the bin folder where
    # this script is in.
    # In this case, let's dynamically add the parent path to the python path
    bin_dir_path = os.path.dirname(os.path.abspath(__file__))
    parent_dir_path = os.path.dirname(bin_dir_path)
    sys.path.append(parent_dir_path)
    import mackup.main


if __name__ == '__main__':
    mackup.main.main()
